@model Web.Models.ListaEmpresasViewModel

@{
    ViewBag.Title = "Seleccionar Empresa";
}

<p style="font-size: x-large">Producto</p>

@Html.Partial("SumarioProducto", Model.Producto)

<p style="font-size: x-large">Seleccionar Empresa</p>

<table class="table" style="width: 50%; float: left">
    <tbody>
        @{
            int cont = 0;
            foreach (var empresa in Model.Empresas)
            {
                if (cont % 2 == 0)
                {
                    <tr>
                        <td>@Html.Partial("SumarioEmpresa", empresa)</td>
                    </tr>
                }
                cont++;
            }
        }
    </tbody>
</table>
<table class="table" style="width: 50%; float: left">
    <tbody>
        @{
            int conteo = 0;
            foreach (var empresa in Model.Empresas)
            {
                if (conteo % 2 == 1)
                {
                    <tr>
                        <td>@Html.Partial("SumarioEmpresa", empresa)</td>
                    </tr>
                }
                conteo++;
            }
        }


    </tbody>
</table>
<div class="btn-group pull-right" style="clear: both">
    @Html.LinkPaginacion(Model.InfoPagina, x => Url.Action("SeleccionarEmpresa", new { pagina = x }))
</div>

