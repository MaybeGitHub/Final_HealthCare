@model Web.Models.LoginViewModel

@{
    ViewBag.Title = "HealthCare - Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="panel-group" style="width: 50%; margin: 5% auto 0 auto">
    <div class="panel panel-success">
        <div class="panel-heading">
            <h3 style="font-family: 'Comic Sans MS'; font-size: x-large">Login</h3>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @autocomplete = "off" }))
            {
                @Html.ValidationSummary()
                <div class="form-group">
                    <label>Usuario:</label>
                    @Html.TextBoxFor(model => model.User, new { @class = "form-control", @maxlength = "20" })
                </div>
                <div class="form-group">
                    <label>Contraseña:</label>
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @maxlength = "30" })
                </div>
                <input type="submit" value="Log in" class="btn btn-success" />
                <a href="/Login/Cuenta" class="btn btn-info">Nueva Cuenta</a>
            }
        </div>
    </div>
</div>

<script>
    $("#User").focus();
</script>
 
